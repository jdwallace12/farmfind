<p id="notice"><%= notice %></p>
<div class="farm-show">
  <div class="row-fluid">
    <div class="span5">
      <h1>
        <%= @farm.name %>
      </h1>
    </div>
    <div class="span4 offset3">
      <h2>
        <%= @farm.city %>,
        <%= @farm.state %>
      </h2>
    </div>
  </div>
  <div class="row-fluid">
    <div class="farm-photo" class="span12">
      <img src="http://placebear.com/1400/500">
    </div>
  </div>
  <div class="row-fluid">
    <div class="span4">
      <div class="farm-description">
        <h5>Farm Description:</h5>
        <%= @farm.farm_description %>
      </div>
    </div>
    <div class="span4">
      <iframe width="90%" height="450" frameborder="0" scrolling="no" marginheight="0" marginwidth="0" src="https://maps.google.com/maps?f=q&amp;source=s_q&amp;hl=en&amp;geocode=&amp;q=Boston,+MA&amp;aq=0&amp;oq=bosto&amp;sll=42.441701,-70.945587&amp;sspn=1.258688,2.991028&amp;t=h&amp;ie=UTF8&amp;hq=&amp;hnear=Boston,+Suffolk,+Massachusetts&amp;ll=42.381626,-71.059914&amp;spn=0.088761,0.145912&amp;z=12&amp;output=embed"></iframe><br /><small><a href="https://maps.google.com/maps?f=q&amp;source=embed&amp;hl=en&amp;geocode=&amp;q=Boston,+MA&amp;aq=0&amp;oq=bosto&amp;sll=42.441701,-70.945587&amp;sspn=1.258688,2.991028&amp;t=h&amp;ie=UTF8&amp;hq=&amp;hnear=Boston,+Suffolk,+Massachusetts&amp;ll=42.381626,-71.059914&amp;spn=0.088761,0.145912&amp;z=12" style="color:#0000FF;text-align:left">View Larger Map</a></small>
    </div>
    <div class="farm-info">

      <div class="span4">
        <ul>
          <li>
          <p>
            Address:
          <b><%= @farm.address %></b>
        </p>
      </li>
      <li>
        <p>
            Phone Number:
          <b><%= @farm.phone_number %></b>
        </p>
        <p>
        </li>
        <li>
          <p>
          Certification:
          <b><%= @farm.certification %></b>
        </p>
      </li>
      <li>
        <p>
          Number of shares:
         <b> <%= @farm.number_of_shares %></b>
        </p>
      </li>
      <li>
        <p>
          Share price:
          <b><%= @farm.share_price %></b>
        </p>
        </li>
      </ul>
      </div>
    </div>
  </div>

    

    <%= link_to 'Edit', edit_farm_path(@farm) %> |
    <%= link_to 'Back', farms_path %>