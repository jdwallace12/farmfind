
<div class="farm-show">
  <div class="farm-header">
    <div class="row-fluid">
      <div class="span8">
        <h5>Farm Name:</h5>
        <h1>
          <%= @farm.name %>
        </h1>
      </div>
      <div class="span4">
        <h5>Location:</h5>
        <h1>
          <%= @farm.city %>,
          <%= @farm.state %>
        </h1>
      </div>
    </div>
  </div>
  <div class="row-fluid">
    <div class="farm-photo span8">

      <%= image_tag @farm.image_url(:profile).to_s %>
      
    </div>
    <div class="map">

        <div class="span4" style="margin-top:20px;">
          <%= image_tag "http://maps.google.com/maps/api/staticmap?size=500x500&sensor=false&zoom=7&markers=#{@farm.latitude}%2C#{@farm.longitude}" %>
      
        </div>
      </div>
  </div>
  <div class="farm-info-wrap">
    <div class="row-fluid">
      <div class="span12">
        <div class="farm-description">
          <p>Farm Description:</p>
          <p><strong>
            <%= @farm.farm_description %>
         </strong> </p>
          <hr>

          <p>Share Description:</p>
          <p><strong>
            <%= @farm.share_description %>
          </strong> 
          </p>
        </div>
      </div>
      <div class="farm-info">
        <div class="row-fluid">
          <div class="span12">
            <h5>Farm Details</h5>
            <ul>
              <li>
                <p>Address:</p>
                <strong> <%= @farm.address %> </strong>
              </li>
              <hr>
              <li>
                <p>Phone Number:</p>
                <strong> <%= @farm.phone_number %> </strong>
              </p>
              <p>
              </li>
              <hr>
              <li>
                <p>Certification:</p>
                <strong> <%= @farm.certification %> </strong>
              </li>
              <hr>
              <li>
                <p> Number of shares:</p>
                <strong> <%= @farm.number_of_shares %> </strong>
              </li>
              <hr>
              <li>
                <p>Share price:</p>
                <strong> <%= @farm.share_price %> </strong>
              </li>
              <hr>
              <li>
                <p>Website Address:</p>
                <strong> <a href="http://<%= @farm.website %>" target="_blank"> <%=@farm.website%> </a></strong>
              </li>
              <hr>
              <li>
                <p>Email:</p>
                <strong> <a href="mailto:<%= @farm.user.email %>" target="_blank"><%=@farm.user.email %></a></strong>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>

    <div class="bottom-nav">
      <div class="row-fluid">
        <div class="span3">
          <%= link_to "Take me back to the map", root_path(:anchor => 'footer'), :class => "btn btn-success"%>
          <% if current_user == @farm.user %>
          <%= link_to "View All My Farms", farms_path, :class => "btn btn-info" %>
        </div>
        <div class="span3 offset6">

          <%= link_to "Edit This Farm", edit_farm_path(@farm), :class => "btn btn-warning" %>
      
          <%= link_to "Delete This Farm", farm_path(@farm), method: :delete, :class => "btn btn-danger" %>
        </div>
           <% end %>
      </div>
    </div>
