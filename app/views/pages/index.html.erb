
<div class="row-fluid">
 <div class="sign-in">
  <% if user_signed_in? %>
  <div class="span6 offset6">
    <p>Logged in as <strong><%= current_user.email %></strong>.
      <%= link_to "Edit Profile", edit_user_registration_path %> | 
      <%= link_to "Logout", destroy_user_session_path, method: :delete %> |
      <%= link_to "Submit a Farm", new_farm_path %>
      <% unless current_user.farms.empty?%> |
      <%= link_to "View Your #{'Farm'.pluralize current_user.farms.count}", farms_path %>
      <% end %>
    </div>
    <% else %>
    <div class="span2 offset10">
      <h4> 
        <%= link_to "Sign Up", new_user_registration_path %> |  
        <%= link_to "Sign In", new_user_session_path %>
      </h4>
    </div>
    <% end %> 
  </div>
</div>
<div class="welcome">
  <div class="row-fluid"> 
    <div class="jumbotron">
      <h1>
        Welcome to Farm Finder
        <br>
      </h1>
      <div class="callout">
        <p class="lead">
          Want fresh food? Find a local farm CSA near you.
          <br>
          Let the world know about your farm.  Share your information about your csa share.
          <br>
          <br>
          <br>
        </p>
      </div>
      <div class="span3 offset4 " class="text-center">
        <button class="btn btn-large btn-success" id="searchfarm" >Search Farms</button>
      </div>
    </div>
  </div>
</div>
</div>
<div class="map">

 <div class="row-fluid">
  <div class="span12">
    <%= gmaps4rails(@json) %>
  </div>
</div>
</div>
<div class="row-fluid">
  <div class="footer-bar">
  </div>
  <div id="footer">
   <div class="row-fluid">
    <div class="span3">
     <div class="left">
       <h3>

        Calling All Farmers 
      </h3>
      <% if user_signed_in? %>
      <%= link_to "Add Your Farm", new_farm_path, :class => "btn btn-large btn-success" %>
      <% unless current_user.farms.empty?%>
      <%= link_to "View Your #{'Farm'.pluralize current_user.farms.count}", farms_path, :class => "btn btn-large btn-warning" %>
      <% end %>
      <% else %>
      <%= link_to "Signup", new_user_registration_path, :class => "btn btn-large btn-info" %>
      <%= link_to "Sign In", new_user_session_path, :class => "btn btn-large" %>
      <% end %>
      <p>
        List your farm for the public to see.
      </p>
    </div>
  </div>
  <div class="span2">
    <%= simple_form_for @search, url: root_path do |f| %>
    <%= f.label :certification_cont, "Filter by Certification" %>
    <%= f.select :certification_cont, ["","organic", "conventional", "none"] %> 
  </div>
  <div class="span2">
    <%= f.label :share_price_lteq, "Spending Limit US$" %>
    <%= f.select :share_price_lteq, (0..2000).step(50).unshift("") %> 
  </div>
  <div class="span3">
    <%= f.label :name_cont, "Find a farm by name" %>
    <%= f.input :name_cont, label: false %>

  </div>
  <div class="span2">
    <div class="right">
      <%= f.submit "Filter Results", :class => "btn btn-large btn-primary" %>
     <% end %>
   </div>
 </div>
</div>
</div>
</div> 
<% if search_performed? %>

<script>
$(function(){
  window.location = window.location.href + "#footer";
});

</script>
<% end %>
